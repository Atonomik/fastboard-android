<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sample_gap_5"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/sample_gap_3"
        android:layout_height="@dimen/sample_gap_3"
        android:layout_margin="@dimen/sample_gap_1"
        android:src="@drawable/ic_cloud_storage_pdf" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@null"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        tools:text="开始使用 Flat" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="@dimen/sample_gap_5"
        android:layout_height="@dimen/sample_gap_5"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/sample_gap_1"
        android:src="@drawable/ic_cloud_storage_add" />
</androidx.appcompat.widget.LinearLayoutCompat>