<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/room_class_button_size"
    android:layout_height="wrap_content"
    android:background="@drawable/sample_flat_layout_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ext_tools"
        android:layout_width="@dimen/room_class_button_size"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/room_class_button_size"
            android:layout_height="@dimen/room_class_button_size">

            <ImageView
                android:id="@+id/message"
                android:layout_width="@dimen/room_class_button_size"
                android:layout_height="@dimen/room_class_button_size"
                android:padding="@dimen/room_class_button_padding_size"
                android:src="@drawable/ic_toolbox_ext_message" />
        </FrameLayout>

        <ImageView
            android:id="@+id/cloud"
            android:layout_width="@dimen/room_class_button_size"
            android:layout_height="@dimen/room_class_button_size"
            android:padding="@dimen/room_class_button_padding_size"
            android:src="@drawable/ic_toolbox_ext_cloudservice" />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="@dimen/room_class_button_size"
            android:layout_height="@dimen/room_class_button_size"
            android:padding="@dimen/room_class_button_padding_size"
            android:src="@drawable/ic_toolbox_ext_setting" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/collapse"
            android:layout_width="@dimen/room_class_button_size"
            android:layout_height="@dimen/room_class_button_size"
            android:padding="@dimen/room_class_button_padding_size"
            android:src="@drawable/ic_toolbox_ext_expanded" />

        <ImageView
            android:id="@+id/expand"
            android:layout_width="@dimen/room_class_button_size"
            android:layout_height="@dimen/room_class_button_size"
            android:padding="@dimen/room_class_button_padding_size"
            android:src="@drawable/ic_toolbox_ext_collapsed"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>