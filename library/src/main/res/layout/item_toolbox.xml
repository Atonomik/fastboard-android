<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/fast_default_button_size"
    android:layout_height="@dimen/fast_default_button_size">

    <ImageView
        android:id="@+id/appliance"
        android:layout_width="@dimen/fast_default_button_icon_size"
        android:layout_height="@dimen/fast_default_button_icon_size"
        android:layout_gravity="center"
        android:background="@drawable/fast_bg_appliance_item"
        android:contentDescription="@null"
        tools:src="@drawable/fast_ic_tool_arrow" />

    <ImageView
        android:id="@+id/expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fast_default_button_gap"
        android:contentDescription="@null"
        android:src="@drawable/fast_ic_tool_expandable" />
</FrameLayout>