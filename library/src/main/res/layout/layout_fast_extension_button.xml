<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/fast_default_button_size"
    android:layout_height="@dimen/fast_default_button_size"
    android:background="@drawable/fast_bg_tool_button"
    tools:parentTag="android.widget.FrameLayout">

    <ImageView
        android:id="@+id/delete"
        android:layout_width="@dimen/fast_default_button_icon_size"
        android:layout_height="@dimen/fast_default_button_icon_size"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/fast_ic_tool_delete" />

    <ImageView
        android:id="@+id/sub_tool_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fast_gap_1_5"
        android:contentDescription="@null"
        android:src="@drawable/fast_ic_tool_expandable" />
</merge>