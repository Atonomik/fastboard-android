<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@drawable/fast_bg_layout_round"
    tools:orientation="horizontal"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/tool_scene_prev"
        android:layout_width="@dimen/fast_default_button_size"
        android:layout_height="@dimen/fast_default_button_size"
        android:layout_margin="@dimen/fast_default_button_gap"
        android:padding="@dimen/fast_default_button_gap"
        android:src="@drawable/fast_ic_tool_scene_prev" />

    <TextView
        android:id="@+id/tool_scene_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/fast_light_mode_icon_color"
        android:textSize="14sp"
        tools:text="12/139" />

    <ImageView
        android:id="@+id/tool_scene_next"
        android:layout_width="@dimen/fast_default_button_size"
        android:layout_height="@dimen/fast_default_button_size"
        android:layout_margin="@dimen/fast_default_button_gap"
        android:padding="@dimen/fast_default_button_gap"
        android:src="@drawable/fast_ic_tool_scene_next" />

    <ImageView
        android:id="@+id/tool_scene_add"
        android:layout_width="@dimen/fast_default_button_size"
        android:layout_height="@dimen/fast_default_button_size"
        android:layout_marginVertical="@dimen/fast_default_button_gap"
        android:padding="@dimen/fast_default_button_gap"
        android:src="@drawable/fast_ic_tool_scene_add" />
</merge>