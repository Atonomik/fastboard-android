<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/fast_bg_layout_round"
    tools:layout_height="wrap_content"
    tools:layout_width="wrap_content"
    tools:orientation="horizontal"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/tool_undo"
        android:layout_width="@dimen/fast_default_button_size"
        android:layout_height="@dimen/fast_default_button_size"
        android:layout_margin="@dimen/fast_default_button_gap"
        android:contentDescription="@null"
        android:padding="@dimen/fast_default_button_gap"
        android:src="@drawable/fast_ic_tool_undo" />

    <ImageView
        android:id="@+id/tool_redo"
        android:layout_width="@dimen/fast_default_button_size"
        android:layout_height="@dimen/fast_default_button_size"
        android:layout_margin="@dimen/fast_default_button_gap"
        android:contentDescription="@null"
        android:padding="@dimen/fast_default_button_gap"
        android:src="@drawable/fast_ic_tool_redo" />
</merge>