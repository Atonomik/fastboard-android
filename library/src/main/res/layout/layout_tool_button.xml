<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/fast_default_button_size_large"
    android:layout_height="@dimen/fast_default_button_size_large">

    <ImageView
        android:id="@+id/tool_button_image"
        android:layout_width="@dimen/fast_default_button_icon_size"
        android:layout_height="@dimen/fast_default_button_icon_size"
        android:layout_gravity="center"
        android:src="@drawable/fast_ic_tool_rectangle" />

    <ImageView
        android:id="@+id/tool_button_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fast_gap_2"
        android:src="@drawable/fast_ic_tool_expandable" />
</merge>